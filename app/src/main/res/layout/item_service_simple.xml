<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:background="@android:color/transparent"
    android:stateListAnimator="@null"
    android:foreground="@null">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serviceContainer"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/background_primary_hard">

        <androidx.cardview.widget.CardView
            android:id="@+id/ivServiceIconContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/ivServiceIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_key"
                android:background="@color/other_background"
                app:tint="@android:color/black"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:clickable="false"
                android:focusable="false"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@id/favoriteContainer"
            android:layout_toEndOf="@id/ivServiceIconContainer"
            android:layout_centerVertical="true"
            android:paddingEnd="12dp"
            android:clickable="false"
            android:focusable="false"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tvServiceName"
                style="@style/MyTheme.Text.Subtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:clickable="false"
                android:focusable="false"/>

            <TextView
                android:id="@+id/tvAccount"
                style="MyTheme.Text.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:clickable="false"
                android:focusable="false"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/favoriteContainer"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="9dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_star_only_border"
                app:tint="@color/favorite_star_background"
                android:clickable="false"
                android:focusable="false"/>

        </FrameLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>