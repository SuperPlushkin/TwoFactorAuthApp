<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стиль для App -->
    <style name="MyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnPrimary">@color/text_hard_on_background_primary</item>
        <item name="colorPrimaryContainer">@color/background_primary_hard</item>
        <item name="colorOnPrimaryContainer">@color/text_medium_on_background_primary</item>

        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- Стиль для Activity -->
    <style name="MyTheme.Activity.Transparent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Стиль для Button -->
    <style name="MyTheme.Button.Normal" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/background_primary_light</item>
        <item name="android:backgroundTint">@color/background_primary_hard</item>
        <item name="rippleColor">@color/text_light_on_background_primary</item>
        <item name="android:textColor">@color/button_checkable_text</item>
        <item name="iconTint">@color/text_medium_on_background_primary</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">-8dp</item>
    </style>

    <style name="MyTheme.Button.AlternativeNormal" parent="MyTheme.Button.Normal">
        <item name="android:backgroundTint">@color/other_background</item>
    </style>

    <style name="MyTheme.Button.Accent" parent="MyTheme.Button.Normal">
        <item name="android:backgroundTint">@color/background_secondary</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="iconTint">@color/text_on_secondary</item>
    </style>

    <style name="MyTheme.Button.Checkable" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/background_primary_medium</item>
        <item name="backgroundTint">@drawable/button_checkable_background</item>
        <item name="android:textColor">@color/button_checkable_text</item>
    </style>

    <!-- Стиль для TextInput -->
    <style name="MyTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1.8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/background_primary_light</item>
        <item name="hintTextColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/text_input_box_stroke</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxBackgroundColor">@color/background_primary_hard</item>
    </style>

    <style name="MyTheme.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/text_hard_on_background_primary</item>
        <item name="android:textColorHighlight">@color/text_light_on_background_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- Стиль для Text -->
    <style name="MyTheme.Text.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_hard_on_background_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="MyTheme.Text.MyToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_hard_on_background_primary</item>
    </style>

    <style name="MyTheme.Text.Subtitle2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_hard_on_background_primary</item>
    </style>

    <style name="MyTheme.Text.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_hard_on_background_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="MyTheme.Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_medium_on_background_primary</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="MyTheme.Text.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_light_on_background_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Стиль для CardView -->
    <style name="MyTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_primary_hard</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Стиль для Toolbar -->
    <style name="MyTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/text_hard_on_background_primary</item>
        <item name="subtitleTextColor">@color/text_medium_on_background_primary</item>
        <item name="android:background">@color/background_primary_hard</item>
        <item name="navigationIconTint">@color/text_hard_on_background_primary</item>
        <item name="android:elevation">4dp</item>
        <item name="layout_collapseMode">pin</item>
        <item name="titleCentered">true</item>
    </style>

    <!-- Стиль для Toolbar -->
    <style name="MyTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:max">100</item>
    </style>

    <!-- Стиль для FloatingActionButton -->
    <style name="MyTheme.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/favorite_star_background</item>
        <item name="tint">@color/ripple_color_fab</item>
        <item name="rippleColor">@color/ripple_color_fab</item>
        <item name="maxImageSize">30dp</item>
    </style>

    <style name="LeftSlideDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/LeftSlideDialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="LeftSlideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

</resources>